{
    "name": "omega-mvc/omega",
    "type": "project",
    "version": "2.0.0",
    "description": "Omega is a lightweight PHP framework designed for building modern web applications using the MVC architecture. Compatible with PHP 8.2+.",
    "homepage": "https://omega-mvc.github.io",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Adriano Giovannini",
            "email": "agisoftt@gmail.com",
            "role": "Developer"
        }
    ],
    "keywords": [
        "framework",
        "MVC",
        "PHP 8.4",
        "example",
        "modern",
        "lightweight"
    ],
    "require": {
        "php": "^8.4",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "ext-posix": "*",
        "ext-readline": "*",
        "ext-simplexml": "*",
        "omega-mvc/framework": "^2.0.0"
    },
    "require-dev": {
        "filp/whoops": "^2.18",
        "phpunit/phpunit": "^12.4",
        "squizlabs/php_codesniffer": "^3.13.4"
    },
    "autoload": {
        "psr-4": {
        	"App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "phpcs": "vendor/bin/phpcs --standard=PSR12 app/",
        "lint": "composer run phpcs",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR12 app/",
        "fix": "composer run phpcbf",
        "check": "composer run lint && composer run test",
        "ci": "composer run fix && composer run check",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "suggest": {
		"ext-apache": "If you want to use apache extension",
        "ext-apcu": "If you want to use APCu for faster in-memory caching",
        "ext-memcached": "If you want to use Memcached as a cache backend",
        "ext-redis": "If you want to use Redis as a cache backend or for session storage",
        "ext-http": "If you want to use HTTP extension features"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
